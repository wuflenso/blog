<!-- note that we se @article instead of @articles in index. It is fully customizable-->

<h1><%=@article.title%></h1>
<p><%=@article.body%></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), 
            method: :delete,
            data: {confirm: "Are you sure?"}%></li>
  <li><%= link_to "Back to Home", root_path %></li>
</ul>


<h2>Add a comment:</h2>
<%= form_for [@article, @article.comments.build] do |form| %>  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>