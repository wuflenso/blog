<!-- this is a .html.erb file. It is like .cshtml file in asp.net where we include razor-->

<h1>Articles</h1>

<!-- The <%  %> is somewhat like razor in asp.net. It adds a ruby functionality inside an html file -->
<!-- The <%=  %> is the same but we want the code result to show -->

<ul>
    <% @articles.each do |article| %>
        <li>
            <h5>
                <!-- Normally it is written like this: -->
                <!--<a href="articles/<%= article.id %>">-->

                <!-- but with "resources :articles" it becomes this...-->
                <a href="<%= article_path(article)%>">
                    <%= article.title %>
            </h5>
            </a>
        </li>
        <% end %>
</ul>

<%= link_to "New Article", new_article_path %>